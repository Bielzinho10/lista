@model lista.Models.Lista

@{
    ViewData["Title"] = "Excluir Tarefa";
}

<h1>Excluir Tarefa</h1>

<h3>Tem certeza que deseja excluir esta tarefa?</h3>
<div>
    <h4>@Model.Nome</h4>
    <dl class="row">
        <dt class="col-sm-2">Data de Criação</dt>
        <dd class="col-sm-10">@Model.DataCriacao.ToString("dd/MM/yyyy HH:mm")</dd>
        <dt class="col-sm-2">Ativo</dt>
        <dd class="col-sm-10">@(Model.Ativo ? "Sim" : "Não")</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>